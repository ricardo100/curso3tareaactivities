<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ejemplosadicionales.curso3tareaactivities.ConfirmarDatos">


    <TextView
        android:id="@+id/tituloConfirmarDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar Datos"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tvLosDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tituloConfirmarDatos"
        android:layout_marginTop="51dp"
        android:text="Confirmar Datos"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btnConfirmarDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLosDatos"
        android:layout_marginTop="138dp"
        android:text="Confirmar Datos" />


</RelativeLayout>
